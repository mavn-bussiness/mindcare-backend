# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mindcare

# Email Configuration (using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=MindCare <noreply@mindcare.com>

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# JWT Secret (use a strong random string in production)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars

# Admin credentials (used for initial admin account creation)
# Run 'npm run setup-admin' after setting these values
ADMIN_EMAIL=admin@mindcare.com
ADMIN_PASSWORD=Change_This_Secure_Password_123!
